# Configuration du serveur
PORT=3000
NODE_ENV=development

# Base de données
DATABASE_PATH=./database.db

# Sécurité - Session
SESSION_SECRET=changez_ce_secret_par_une_valeur_aleatoire_tres_longue_et_securisee
SESSION_NAME=fossnote_session
SESSION_MAX_AGE=86400000

# Sécurité - Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# RGPD
DPO_EMAIL=dpo@votre-etablissement.fr
RESPONSIBLE_NAME=Nom du responsable de traitement
ESTABLISHMENT_NAME=Nom de votre établissement
ESTABLISHMENT_ADDRESS=Adresse complète de l'établissement
ESTABLISHMENT_PHONE=+33 X XX XX XX XX
ESTABLISHMENT_EMAIL=contact@votre-etablissement.fr

# Cookies
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# Production - Définissez ces valeurs pour la production
# NODE_ENV=production
# COOKIE_SECURE=true
# FORCE_HTTPS=true

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/fossnote.log

# Email (si vous ajoutez un système de notifications par email)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@votre-etablissement.fr
# SMTP_PASSWORD=votre_mot_de_passe_smtp
# SMTP_FROM=Fossnote <noreply@votre-etablissement.fr>

# Backup automatique (optionnel)
# BACKUP_ENABLED=true
# BACKUP_PATH=./backups
# BACKUP_SCHEDULE=0 2 * * *

# Maintenance mode (optionnel)
# MAINTENANCE_MODE=false
# MAINTENANCE_MESSAGE=Le système est actuellement en maintenance.

# Analytics (optionnel - Matomo ou autre solution RGPD-friendly)
# ANALYTICS_ENABLED=false
# MATOMO_URL=https://analytics.votre-domaine.fr
# MATOMO_SITE_ID=1

# Développement
DEBUG=false
